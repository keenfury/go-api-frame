package storage

import (
	"fmt"
	"log"

	"github.com/jmoiron/sqlx"
	"{{.ProjectPath}}/config"
	_ "github.com/mattn/go-sqlite3"
)

var SqliteDB *sqlx.DB
var sqliteConnection string

func init() {
	sqliteConnection = GetSqliteConnection()
	if config.StorageSQL {
		var err error
		SqliteDB, err = sqlx.Open("sqlite3", sqliteConnection)
		if err != nil {
			log.Panicln("Could not connect with connection string:", sqliteConnection)
		}
		SqliteDB.SetMaxOpenConns(1)
	}
}

func GetSqliteConnection() {
	return fmt.Sprintf("%s?cache=shared&mode=wrc", config.SqlitePath)